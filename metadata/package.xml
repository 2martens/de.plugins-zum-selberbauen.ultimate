<?xml version="1.0" encoding="UTF-8"?>
<package name="de.plugins-zum-selberbauen.ultimate" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/package.xsd">
	<packageinformation>
		<packagename><![CDATA[Ultimate CMS]]></packagename>
		
		<packagedescription><![CDATA[A WCF compatible CMS.]]></packagedescription>
		<packagedescription language="de"><![CDATA[Ein WCF-kompatibles CMS.]]></packagedescription>
		<packagedescription language="de-informal"><![CDATA[Ein WCF-kompatibles CMS.]]></packagedescription>
		
		<isapplication>1</isapplication>
		<version>1.0.0 Beta 5</version>
		<date>2013-09-23</date>
	</packageinformation>
	
	<authorinformation>
		<author><![CDATA[Jim Martens]]></author>
		<authorurl><![CDATA[http://www.plugins-zum-selberbauen.de/]]></authorurl>
	</authorinformation>
	
	<requiredpackages>
		<requiredpackage minversion="2.0.0*">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="2.0.0*" file="requirements/com.woltlab.wcf.conversation.tar.gz">com.woltlab.wcf.conversation</requiredpackage>
		<requiredpackage minversion="1.0.0 Beta 2" file="requirements/de.plugins-zum-selberbauen.cachedList.tar.gz">de.plugins-zum-selberbauen.cachedList</requiredpackage>
		<requiredpackage minversion="1.0.0 Beta 2" file="requirements/de.plugins-zum-selberbauen.messageACP.tar.gz">de.plugins-zum-selberbauen.messageACP</requiredpackage>
		<requiredpackage minversion="1.0.0 Beta 3" file="requirements/de.plugins-zum-selberbauen.ultimateCore.tar.gz">de.plugins-zum-selberbauen.ultimateCore</requiredpackage>
	</requiredpackages>
	
	<optionalpackages>
		<optionalpackage minversion="2.0.0*" file="optional/com.woltlab.wcf.legalNotice.tar.gz">com.woltlab.wcf.legalNotice</optionalpackage>
	</optionalpackages>
	
	<instructions type="install">
		<!-- files -->
		<instruction type="acpTemplate">acptemplates.tar</instruction>
		<instruction type="file">files.tar</instruction>
		<instruction type="file" application="wcf">files_wcf.tar</instruction>
		<instruction type="template">templates.tar</instruction>
		<!-- /files -->
		
		<!-- other -->
		<instruction type="sql">install.sql</instruction>
		<!-- /other -->
		
		<!-- xml and rest -->
		<instruction type="pageMenu">pageMenu.xml</instruction>
		<instruction type="templateListener">templateListener.xml</instruction>
		<instruction type="objectType">objectType.xml</instruction>
		<instruction type="option">option.xml</instruction>
		<instruction type="userGroupOption">userGroupOption.xml</instruction>
		<instruction type="language">language/*.xml</instruction>
		<instruction type="eventListener">eventListener.xml</instruction>
		<instruction type="acpMenu">acpMenu.xml</instruction>
		<instruction type="clipboardAction">clipboardAction.xml</instruction>
		<instruction type="sitemap">sitemap.xml</instruction>
		<instruction type="dashboardBox">dashboardBox.xml</instruction>
		<instruction type="packageInstallationPlugin">packageInstallationPlugin.xml</instruction>
		<instruction type="coreObject">coreObject.xml</instruction>
		<instruction type="script">acp/InstallUltimateCMS.class.php</instruction>
		<instruction type="userNotificationEvent">userNotificationEvent.xml</instruction>
		<instruction type="cronjob">cronjob.xml</instruction>
		<!-- /xml and rest -->
	</instructions>
	
	<instructions type="update" fromversion="1.0.0 Beta 4">
		<instruction type="file">files_update.b4.tar</instruction>
	</instructions>
	
	<instructions type="update" fromversion="1.0.0 Beta 3">
		<instruction type="acpTemplate">acptemplates_update.b3.tar</instruction>
		<instruction type="file">files_update.b3.tar</instruction>
		<instruction type="template">templates_update.b3.tar</instruction>
		
		<instruction type="templateListener">templateListener_update.b3.xml</instruction>
		<instruction type="language">language/*.xml</instruction>
	</instructions>
</package>
